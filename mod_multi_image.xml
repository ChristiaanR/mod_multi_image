<?xml version="1.0" encoding="UTF-8"?>
<extension type="module" client="site" method="upgrade">
    <name>MOD_MULTI_IMAGE</name>
    <author>Christiaan Ruiter</author>
    <creationDate>December 2025</creationDate>
    <copyright>Copyright (C) 2025</copyright>
    <license>GNU General Public License version 2 or later</license>
    <authorEmail>web@christiaanruiter.nl</authorEmail>
    <authorUrl>https://christiaanruiter.nl</authorUrl>
    <version>1.0.0</version>
    <description>MOD_MULTI_IMAGE_XML_DESCRIPTION</description>
    
    <namespace path="src">ChristiaanRuiter\Module\MultiImage</namespace>
    
    <files>
        <filename module="mod_multi_image">mod_multi_image.php</filename>
        <folder>src</folder>
        <folder>tmpl</folder>
        <folder>language</folder>
    </files>
    
    <media destination="mod_multi_image" folder="media">
        <folder>css</folder>
        <folder>js</folder>
    </media>
    
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                    name="image1"
                    type="media"
                    label="MOD_MULTI_IMAGE_IMAGE1_LABEL"
                    description="MOD_MULTI_IMAGE_IMAGE1_DESC"
                />
                
                <field
                    name="link1"
                    type="url"
                    label="MOD_MULTI_IMAGE_LINK1_LABEL"
                    description="MOD_MULTI_IMAGE_LINK1_DESC"
                    default=""
                />
                
                <field
                    name="image2"
                    type="media"
                    label="MOD_MULTI_IMAGE_IMAGE2_LABEL"
                    description="MOD_MULTI_IMAGE_IMAGE2_DESC"
                />
                
                <field
                    name="link2"
                    type="url"
                    label="MOD_MULTI_IMAGE_LINK2_LABEL"
                    description="MOD_MULTI_IMAGE_LINK2_DESC"
                    default=""
                />
                
                <field
                    name="image3"
                    type="media"
                    label="MOD_MULTI_IMAGE_IMAGE3_LABEL"
                    description="MOD_MULTI_IMAGE_IMAGE3_DESC"
                />
                
                <field
                    name="link3"
                    type="url"
                    label="MOD_MULTI_IMAGE_LINK3_LABEL"
                    description="MOD_MULTI_IMAGE_LINK3_DESC"
                    default=""
                />
                
                <field
                    name="width"
                    type="text"
                    label="MOD_MULTI_IMAGE_WIDTH_LABEL"
                    description="MOD_MULTI_IMAGE_WIDTH_DESC"
                    default=""
                />
                
                <field
                    name="height"
                    type="text"
                    label="MOD_MULTI_IMAGE_HEIGHT_LABEL"
                    description="MOD_MULTI_IMAGE_HEIGHT_DESC"
                    default=""
                />
                
                <field
                    name="target"
                    type="list"
                    label="MOD_MULTI_IMAGE_TARGET_LABEL"
                    description="MOD_MULTI_IMAGE_TARGET_DESC"
                    default="0"
                >
                    <option value="0">MOD_MULTI_IMAGE_TARGET_SAME</option>
                    <option value="1">MOD_MULTI_IMAGE_TARGET_NEW</option>
                    <option value="2">MOD_MULTI_IMAGE_TARGET_POPUP</option>
                </field>
                
                <field
                    name="layout"
                    type="list"
                    label="MOD_MULTI_IMAGE_LAYOUT_LABEL"
                    description="MOD_MULTI_IMAGE_LAYOUT_DESC"
                    default="horizontal"
                >
                    <option value="horizontal">MOD_MULTI_IMAGE_LAYOUT_HORIZONTAL</option>
                    <option value="vertical">MOD_MULTI_IMAGE_LAYOUT_VERTICAL</option>
                    <option value="grid">MOD_MULTI_IMAGE_LAYOUT_GRID</option>
                </field>
                
                <field
                    name="breakpoint_double"
                    type="number"
                    label="MOD_MULTI_IMAGE_BREAKPOINT_DOUBLE_LABEL"
                    description="MOD_MULTI_IMAGE_BREAKPOINT_DOUBLE_DESC"
                    default="768"
                />
                
                <field
                    name="breakpoint_triple"
                    type="number"
                    label="MOD_MULTI_IMAGE_BREAKPOINT_TRIPLE_LABEL"
                    description="MOD_MULTI_IMAGE_BREAKPOINT_TRIPLE_DESC"
                    default="1024"
                />
            </fieldset>
            
            <fieldset name="advanced">
                <field
                    name="layout"
                    type="modulelayout"
                    label="JFIELD_ALT_LAYOUT_LABEL"
                    description="JFIELD_ALT_MODULE_LAYOUT_DESC"
                />
                
                <field
                    name="moduleclass_sfx"
                    type="textarea"
                    label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
                    description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"
                    rows="3"
                />
                
                <field
                    name="cache"
                    type="list"
                    label="COM_MODULES_FIELD_CACHING_LABEL"
                    description="COM_MODULES_FIELD_CACHING_DESC"
                    default="1"
                >
                    <option value="1">JGLOBAL_USE_GLOBAL</option>
                    <option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
                </field>
                
                <field
                    name="cache_time"
                    type="number"
                    label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
                    description="COM_MODULES_FIELD_CACHE_TIME_DESC"
                    default="900"
                />
            </fieldset>
        </fields>
    </config>
</extension>